@model ContractFarming.Models.Report

@{
    ViewData["Title"] = "البلاغات";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->






    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"> <a asp-action="Index">البلاغات </a> /</span> إضافة بلاغ
        </h4>
        <div class="col-12 col-md-8 col-xl-7 mb-4 mb-md-0">
            <div class="card ">

                


                            <div class="offcanvas-body flex-grow-0 mx-0">
                                <form asp-action="Add" class="add-new-record " id="valid" onsubmit=" ">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" a />
                                    <div class="col-sm-12">
                                        <label asp-for="Text" class="control-lable"> نص البلاغ</label>
                                        <textarea asp-for="Text" class="form-control " rows="3"></textarea>
                                        <span asp-validation-for="Text" class="text-danger"></span>
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                    <div class="col-sm-12">
                                        <label asp-for="Text" class="control-lable"> العقد</label>
                                        <select asp-for="ContractId" asp-items='@( new SelectList(ViewBag.Contract,"Id","ContractTitle"))' class="form-control "></select>
                                        <span asp-validation-for="Text" class="text-danger"></span>
                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>



                                    <div class="col-sm-12 mt-5">
                                        <button asp-action="Add" type="submit" class="btn btn-primary data-submit me-1 me-sm-3 w-100 ">حفظ</button>
                                    </div>
                                    <div class="col-sm-12">
                                        <button asp-action="Index" class="btn btn-outline-secondary w-100 mt-1">
                                            إلغاء
                                        </button>
                                    </div>



                                </form>
                            </div>
                        </div>




                        <!-- / Layout wrapper -->
                    </div>
                </div>
            </div>

        

   
