@model ContractFarming.Models.ReciptStatement
@*@{ 
    ViewData["Title"] = "بيان الإستلام";
}*@
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->






    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"> <a asp-action="Index">بيان الإستلام </a> /</span> إضافة بيان إستلام
        </h4>
        <div class="col-12 col-md-8 col-xl-7 mb-4 mb-md-0">
            <div class="card ">


                <div class="offcanvas-body flex-grow-0 mx-0">
                    <form asp-action="AddOrEdit" class="add-new-record " id="valid" onsubmit=" ">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" a />
                        <div class="col-sm-12">
                            <label asp-for="Quantity" class="control-lable"> الكمية</label>
                            <input asp-for="Quantity" class="form-control dt-full-name" type="text" placeholder="الكمية" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="Weight" class="control-lable"> الوزن</label>
                            <input asp-for="Weight" class="form-control" type="text" placeholder="الوزن" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Weight" class="text-danger"></span>

                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="Unit" class="control-lable">  الوحدة</label>
                            <input asp-for="Unit" class="form-control" type="text" placeholder=" الوحدة" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Unit" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="Category" class="control-lable">  الصنف</label>
                            <input asp-for="Category" class="form-control " type="text" placeholder=" الصنف" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Category" class="text-danger"></span>

                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="Degree" class="control-lable">  الدرجة</label>
                            <input asp-for="Degree" class="form-control" type="text" placeholder="الدرجة" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Degree" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>

                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="ContractId" class="control-lable">   رقم العقد</label>
                            <select asp-for="ContractId" class="form-control" type="text" asp-items="@(new SelectList(ViewBag.Contract, "Id", "ContractTitle") )" > </select>
                            <span asp-validation-for="ContractId" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>

                       

                        <div class="col-sm-12 mt-5">
                            <button asp-action="AddOrEdit" type="submit" class="btn btn-primary data-submit me-1 me-sm-3 w-100 ">حفظ</button>
                        </div>
                        <div class="col-sm-12">
                            <button asp-action="Index" class="btn btn-outline-secondary w-100 mt-1">
                                إلغاء
                            </button>
                        </div>



                    </form>
                </div>
            </div>




            <!-- / Layout wrapper -->
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

