@model IEnumerable<ContractFarming.Models.InstallmentReview>


@{
    ViewData["Title"] = "تقييم الأقساط";
}
<<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Users List Table -->
        <div class="card">

            <div class="card-datatable ">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    <div class="row mx-2 border-bottom ">

                        <div class="col-md-12">

                            <div class=" justify-content-end   d-grid gap-2 ">
                                <a asp-action="Add">
                                    <button class="dt-button add-new btn btn-primary mt-3 ml-5">
                                        <span>
                                            <i class="bx bx-plus me-0 me-lg-2"></i>
                                            @*@if (AuthorizationService.AuthorizeAsync(User, Premissions.Driver.Add, Premissions.Driver.Edit).Result.Succeeded)
                            {*@
                                            <span class="d-none d-lg-inline-block"> إضافة تقييم </span>

                                        </span>
                                    </button>
                                </a>
                            </div>
                        </div>


                    </div>
                    <div class="table-responsive text-nowrap">

                        <div class="card">
                            <div class="table-responsive text-nowrap">
                                @if (!Model.Any())
                                {
                                    <div class="alert alert-warning" role="alert">
                                        لا توجد اي تقيمات للاقساط بعد
                                    </div>
                                }
                                else
                                {
                                    <table class="table TProject">
                                        <thead>
                                            <tr>
                                                <th>رقم التقييم</th>
                                                
                                                <th>المٌنتِج</th> 
                                                
                                                <th> العقد</th>
                                                <th>رقم القسط</th>
                                                <th>نص التقييم</th>
                                                <th>تاريخ التقييم</th>
                                                <th>درجة التقييم</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-border-bottom-0">

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <th>@item.Producer.FullName</th>
                                                    <td> @item.Installment.Contract.ContractTitle</td>
                                                    <th>@item.InstallmentId</th>
                                                    <th> @item.Text</th>
                                                    <th> @item.Date</th>
                                                    <th> @item.RatingScore</th>
                                                    <th>
                                                        <div class="dropdown">
                                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false">
                                                                <i class="bx bx-dots-vertical-rounded"></i>
                                                            </button>
                                                            <div class="dropdown-menu">

                                                                @*<a asp-action="" class="dropdown-item" href="javascript:void(0);">
            <i class="bx bxs-edit-alt icon-padding edit-color"></i>

            تعديل
        </a>*@
                                                                <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" onclick="return confirm('هل تريد حذف هذا الحقل؟')">
                                                                    <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                                    حذف
                                                                </a>





                                                            </div>
                                                        </div>
                                                    </th>

                                                </tr>

                                            }


                                        </tbody>
                                    </table>
                                }
                                </div>


                          
                        </div>
                    </div>
                </div>
            </div>
            