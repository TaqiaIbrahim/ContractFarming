@model AddUserViewModel
    <!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="breadcrumb-wrapper py-3 mb-4">
                <span class="text-muted fw-light"> <a asp-action="Index">المناديب </a> /</span> إضافة مندوب
            </h4>
            <div class="row">

                <div class="col-md-12">

                    <div class="card mb-4">



                        <!-- Account -->


                        <div class="card-body">
                            <form  asp-action="Add">
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @*<input type="hidden" asp-for="Id" a />*@

                                    <div class="col-sm-12 fv-plugins-icon-container">
                                        <label asp-for="Name" class="form-label">اسم المندوب</label>

                                        <input asp-for="Name" class="form-control" type="text" aria-label="132456" aria-describedby="basicFullname2">

                                        <span asp-validation-for="Name" class="text-danger"></span>
                                        <div class="fv-plugins-message-container invalid-feedback"></div>

                                    </div>

                                    <div class="col-sm-12 fv-plugins-icon-container">
                                        <label class="form-label" asp-for="PhoneNumber">رقم الهاتف</label>
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text">YEM (+967)</span>
                                            <input asp-for="PhoneNumber" class="form-control" type="text" aria-label="132456" aria-describedby="basicFullname2">

                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            <div class="fv-plugins-message-container invalid-feedback"></div>


                                        </div>
                                    </div>
                                    <div class="col-sm-12 fv-plugins-icon-container">
                                        <label class="form-label" asp-for="ContractId">اسم العقد</label>
                                        <select asp-for="ContractId" asp-items="@(new SelectList(ViewBag.Contract,"Id","ContractTitle"))"
                                                id="item-group-a"
                                                class="select2 form-select form-select-lg"
                                                data-allow-clear="true">

                                            <!-- asp-for="ContractTittle" -->
                                            <span asp-validation-for="ContractId" class="text-danger"></span>


                                        </select>
                                    </div>

                                    <div class="col-sm-12 fv-plugins-icon-container">
                                        <label asp-for="UserName" class="control-lable">  اسم المستخدم</label>
                                        <input asp-for="UserName" class="form-control" type="text" aria-label="132456" aria-describedby="basicFullname2">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <div class="fv-plugins-message-container invalid-feedback"></div>



                                        <div class="col-sm-12 fv-plugins-icon-container">
                                            <label asp-for="Email" class="control-lable">  البريد الالكتروني</label>
                                            <input asp-for="Email" class="form-control" type="text" aria-label="132456" aria-describedby="basicFullname2">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>


                                        <div class="fv-plugins-message-container invalid-feedback"></div>
                                        <label asp-for="Password" class="control-lable">  كلمة المرور</label>
                                        <input asp-for="Password" class="form-control" type="text" aria-label="132456" aria-describedby="basicFullname2">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                        <div class="fv-plugins-message-container invalid-feedback"></div>




                                    </div>
                                    <div class="mt-2">
                                        <button asp-action="Add" type="submit" class="btn btn-primary me-2">حفظ </button>
                                        <button asp-action="Index" type="reset" class="btn btn-label-secondary">إلغاء</button>
                                    </div>
</form>
                        </div>
                        <!-- /Account -->
                    </div>

                </div>
            </div>
        </div>
        <!-- / Content -->
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
