@model IEnumerable<ContractFarming.Models.Finance>
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">


    <!-- Users List Table -->
    <div class="card">

        <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">

           

        


            <div class="col-md-12">
                <div class="col-md-12">
                    <div class=" justify-content-end   d-grid gap-2 ">
                        <a asp-action="Add">
                            <button class="dt-button add-new btn btn-primary">
                                <span>
                                    <i class="bx bx-plus me-0 me-lg-2"></i>
                                    <span class="d-none d-lg-inline-block"> اضافة تمويل </span>
                                </span>
                            </button>
                        </a>
                    </div>
                </div>
            </div>



        <div class="table-responsive text-nowrap">

            <div class="card">
                <div class="table-responsive text-nowrap">
                    <table class="table TProject">
                        <thead>
                            <tr>
                                <th>الرقم التسلسلي</th>
                             
                                <th>المنتج</th>

                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>

                                   
                                    <td>@Html.DisplayFor(modelItem => item.product.Name) </td>

                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" id="confirmText">
                                            <i class="bx bxs-trash-alt icon-padding delet-color" aria-hidden="true"></i>
                                            حذف
                                        </a>


                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>


               
            </div>
        </div>



    </div>
</div>
    </div>
</div>
<!-- Offcanvas to add new user -->
