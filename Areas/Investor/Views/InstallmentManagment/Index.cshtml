@model IEnumerable<ContractFarming.Models.Installment>
<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">


                
                    <div class="col-md-12">
                        <div class=" justify-content-end   d-grid gap-2 ">
                            <a asp-action="AddInKindInstallment">
                                <button class="dt-button add-new btn btn-primary">
                                    <span>
                                        <i class="bx bx-plus me-0 me-lg-2"></i>
                                        <span class="d-none d-lg-inline-block"> اضافة قسط عيني </span>
                                    </span>
                                </button>
                            </a>
                        </div>
                    </div>
                
                
                    <div class="col-md-12">
                        <div class=" justify-content-end   d-grid gap-2 ">
                            <a  asp-action="AddFin">
                                <button class="dt-button add-new btn btn-primary">
                                    <span>
                                        <i class="bx bx-plus me-0 me-lg-2"></i>
                                        <span class="d-none d-lg-inline-block"> اضافة قسط مالي </span>
                                    </span>
                                </button>
                            </a>
                        </div>
                    </div>
                


               

            </div>
            <div class="card">
                <div class="table-responsive text-nowrap">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            لا توجد اي أقساط بعد
                        </div>
                    }
                    else
                    {
                        <table class="table TProject">
                            <thead>
                                <tr>
                                    <th>رقم التسلسلي</th>
                                    <th>العقد</th>


                                    <th>رقم القسط</th>
                                    <th>نوعه</th>
                                    <th>
                                        التفاصيل
                                    </th>
                                    @*<th>الإجراءات</th>*@
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th>@item.Id</th>
                                    <td>@item.Contract.ContractTitle</td>

                                    <td>@item.Id</td>

                                    <td>
                                        @if (item.Discriminator == "Financial_Installment")
                                        {<p>مالي</p> }

                                        else
                                        { <p>عيني</p>}
                                    </td>
                                    <th>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                @if (item.Discriminator == "Financial_Installment")
                                                {
                                                    <a asp-action="Addfin" asp-route-id="@item.Id" class="dropdown-item">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        تعديل قسط مالي
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a asp-action="AddInKindInstallment" asp-route-id="@item.Id" class="dropdown-item">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        تعديل قسط عيني
                                                    </a>
                                                }

                                                @if (item.Discriminator == "Financial_Installment")
                                                {
                                            <a asp-action="Financial_Installment" asp-route-id="@item.Id" class="dropdown-item">
                                                <i class=" fa fa-eye icon-padding"></i>

                                                عرض قسط مالي
                                            </a>
                                                }
                                                else
                                                {
                                            <a asp-action="InKindInstallment" asp-route-id="@item.Id" class="dropdown-item">
                                                <i class=" fa fa-eye icon-padding"></i>

                                                عرض قسط عيني
                                            </a>
                                                }
                                                @*@if (item.Discriminator == "Financial_Installment")
                                                {*@
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" onclick="return confirm('هل تريد حذف هذا الحقل بالفعل؟')">
                                                        <i class="bx bxs-trash-alt icon-padding delet-color"></i>

                                                      حذف
                                                    </a>
                                                @*}*@
                                                @*else
                                                {
                                                    <a asp-action="AddKin" asp-route-id="@item.Id" class="dropdown-item">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        حذف قسط عيني
                                                    </a>
                                                }*@




                                            </div>
                                        </div>
                                    </th>


                                </tr>

                                }
                            </tbody>
                        </table>
                    }
                </div>



            </div>


       
        </div>
    </div>
</div>
