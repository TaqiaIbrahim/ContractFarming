@model IEnumerable<ContractFarming.Models.Contract>
<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
@{
    ViewData["Title"] = "تقييم عقد";
   
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <!-- Users List Table -->
        <div class="card">






            <div class="table-responsive text-nowrap">


                <table class="table TProject">
                    <thead>
                        <tr>
                            <th>رقم العقد</th>
                            <th>
                                اسم العقد
                            </th>
                            <th>المنتج</th>
                            @*<th>تصنيفة</th>*@
                            @*<th> نوعه</th>*@
                            <th>اسم المنتج</th>
                            <th>اسم المستثمر</th>
                            @*<th>التكلفة الاجمالية</th>*@

                            <th>تقييم</th>

                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ContractTitle </td>
                                <th>@item.ContractRequests.product.Name</th>
                                @*<th>@item.ContractRequests.product.Classification</th>*@

                                @*<th>@item.ContractRequests.product.categories.ProductType</th>*@
                                @{ @if (item.Id == item.ContractRequests.Id)
                                    {
                                        <th>@item.ContractRequests.Producer.FullName</th>
                                        <th>@item.ContractRequests.Investor.FullName</th>
                                    }
                                    else
                                    {
                                        <th>@item.ContractRequests.Producer.FullName</th>
                                        <th>@item.ContractRequests.Investor.FullName</th>
                                    }
                                }

                                <th>
                                    <a asp-action="Add">
                                        <button class="dt-button add-new btn bg-label-primary btn-add" tabindex="0" aria-controls="DataTables_Table_0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAddUser">

                                            <span>
                                                <span class="d-none d-lg-inline-block  ">تقييم</span>
                                            </span>

                                        </button>
                                    </a>
                                </th>



                            </tr>
                        }
                    </tbody>
                </table>
            </div>




        </div>


    </div>
</div>


<!-- / Layout wrapper -->