@model IEnumerable<ContractFarming.Models.ReciptStatement>
@{
    ViewData["Title"] = "بيان الاستلام";

}
<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <!-- Users List Table -->
        <div class="card">

            <div class="table-responsive text-nowrap">


                <table class="table TProject">
                    <thead>
                        <tr>
                            <th>اسم العقد</th>
                            <th>الصنف</th>
                            <th>
                                الدرجة
                            </th>
                            <th>الوحدة</th>
                            <th> الوزن</th>
                            <th>السعر</th>
                            <th>الكمية</th>
                            <th>أوافق/لا أوافق</th>

                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Contract.ContractTitle</td>
                                <td>@item.Category </td>
                                <th>@item.Degree</th>
                                <th>@item.Unit</th>
                                <th>@item.Weight</th>
                                <th>@item.Quantity </th>
                                <th> </th>
                                <th>


                                    <div class="d-flex justify-content-between mb-2">

                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">

                                                <a asp-action="ConfirmAction" asp-route-Id="@item.Id" class="dropdown-item">
                                                    <i class="bx bxs-edit-alt icon-padding edit-color">

                                                    </i>

                                                    تأكيدالطلب
                                                </a>








                                            </div>
                                        </div>
                                    </div>

                                </th>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>




        </div>


    </div>
</div>
            </div>





<!-- / Layout wrapper -->
