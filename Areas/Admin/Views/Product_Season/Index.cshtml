@model IEnumerable<ContractFarming.Models.Product_Season>


@{
    ViewData["Title"] = " أسعار المنتجات";
    var index = 1;
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">
                <div class="col-md-12">

                    <div class=" justify-content-end   d-grid gap-2 ">
                        <a asp-action="AddOrEdit">
                            <button class="dt-button add-new btn btn-primary mt-3 ml-5">
                                <span>
                                    <i class="bx bx-plus me-0 me-lg-2"></i>
                                    <span class="d-none d-lg-inline-block">  تحديد سعر المنتًج </span>
                                </span>
                            </button>
                        </a>
                    </div>
                </div>


            </div>
            <div class="table-responsive text-nowrap">
                @if (!Model.Any())
                {
                    <div class="alert alert-warning" role="alert">
                        لا توجد اي مواسم منتجات بعد
                    </div>
                }
                else
                {

                    <table class="table TProject">
                        <thead>
                            <tr>

                                <th>رقم التسلسلي</th>
                                <th>
                                    الموسم
                                </th>
                                <th>المنتَج</th>
                                <th>سعر الكيلو</th>

                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                    
                            @foreach (var item in Model)
                            {

                                <tr id="row_@item.Id">


                                    <th>  @(index++)</th>
                                    <th> @item.Season.SeasonName</th>
                                    <th>@item.Product.Name</th>
                                    <th>@item.Price</th>




                                    <th>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">

                                              

                                                <a href='@Url.Action("AddOrEdit", "Product_Season", new { ProductId = item.ProductId, SeasonId = item.SeasonId }) ' class="dropdown-item">
                                                    <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                    تعديل
                                                </a>
                                                <a href='@Url.Action("Delete", "Product_Season", new { ProductId = item.ProductId, SeasonId = item.SeasonId }) ' onclick="return confirm('هل تريد حذف هذا الحقل ؟');" class="dropdown-item">
                                                    <i class="bx bxs-trash-alt icon-padding delet-color"></i>

                                                    حذف
                                                </a>






                                            </div>
                                        </div>
                                    </th>


                                </tr>
                            }



                        </tbody>
                    </table>
                }
                </div>


           
        </div>
    </div>
</div>





