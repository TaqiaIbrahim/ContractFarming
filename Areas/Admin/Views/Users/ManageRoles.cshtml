@model UserRoleViewModel
@{
    ViewData["Title"] = "المستخدمين";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->






    <div class="container-xxl flex-grow-1 container-p-y">
        @*<h4 class="breadcrumb-wrapper py-3 mb-4">
                <span class="text-muted fw-light"> <a asp-action="Index">المستخدمين  </a> /</span> إضافة مستخدم
            </h4>*@
        <div class="col-12 col-md-8 col-xl-7 mb-4 mb-md-0">
            <div class="card ">


                <div class="offcanvas-body flex-grow-0 mx-0">
                    <form method="post" asp-action="Add" class="add-new-record " id="valid" onsubmit=" ">
                        <div class="card-header">
                            <h2>@Model.UserName</h2>
                            إضافة/تعديل الصلاحيات
                        </div>
                        <hr />
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" a />
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="form-check m-1">
                                    <input type="hidden" asp-for="@Model.Roles[i].DisplayValue" />
                                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                                    <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                                        @Model.Roles[i].DisplayValue
                                    </label>

                                </div>
                            }
                        </div>

                        <div class="card-footer">
                           
                                <button asp-action="ManageRoles" type="submit" class="btn btn-primary  ml-4 mr-5">حفظ</button>
                            
                            
                                <button asp-action="Index" class="btn btn-outline-secondary ml-5">
                                    إلغاء
                                </button>
                            
                        </div>


                    </form>
                </div>
            </div>




            <!-- / Layout wrapper -->
        </div>
    </div>
</div>

</div>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


