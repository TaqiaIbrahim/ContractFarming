                            </div>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                                            <div class="col-sm-12">
                        <label asp-for=" CategoryId" class="control-lable"> نوع المنتج</label>
                        <select asp-for="CategoryId" class="form-control " asp-items='@( new SelectList (ViewBag.Category,"Id","ProductType"))'></select>
                        <span asp-validation-for=" CategoryId" class="text-danger"></span>
                        <div class="fv-plugins-message-container invalid-feedback"></div>
                    </div>

                        <div class="col-sm-12 fv-plugins-icon-container">
