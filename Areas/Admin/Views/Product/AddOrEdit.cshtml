                            <div class="fv-plugins-message-container invalid-feedback"></div>

                        </div>*@
                        <div class="col-sm-12 fv-plugins-icon-container">
                            <label asp-for="Prices" class="form-label" for="basicFullname">سعر المنتج</label>
                            <input asp-for="Prices" type="text" id="NameUser" class="form-control dt-full-name" name="NameUser"
                                   aria-label="132456" aria-describedby="basicFullname2">

                            <span asp-validation-for="Prices" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>




