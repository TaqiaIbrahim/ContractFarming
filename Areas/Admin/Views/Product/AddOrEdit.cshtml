                            <label asp-for="Name" class="control-lable"> الاسم</label>
                            <input asp-for="Name" class="form-control dt-full-name" type="text" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                

                       
                        <div class="col-sm-12">
                            <label asp-for="ImageUrl" class="form-label">صورة المنتج</label>
                            <div class="input-group">
