}


<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->






    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"> <a asp-action="Index">المنتجات </a> /</span> إضافة منتجات
        </h4>
        <div class="col-12 col-md-8 col-xl-7 mb-4 mb-md-0">
