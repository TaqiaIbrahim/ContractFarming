@model IEnumerable<ContractFarming.Models.Contract>


@{
    ViewData["Title"] = "العقود";
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">

            



           
            


            </div>
            <div class="table-responsive text-nowrap">


                <table class="table TProject">
                    <thead>
                        <tr>

                            <th>رقم العقد</th>

                            <th>رقم الطلب</th>
                            <th>اسم المنتج</th>
                            <th>اسم المنتًج</th>
                            <th>اسم المستثمر</th>
                            <th>تاريخ التوقيع</th>
                            <th>صيغة العقد</th>
                            <th></th>

                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th>@item.Id</th>

                            <th>@item.ContractRequestId</th>
                            <th>@item.ContractRequests.Producer.FullName</th>
                            <th>@item.ContractRequests.Investor.FullName</th>
                            <th>@item.ContractRequests.product.Name</th>
                            <th>@item.DeliveryDate</th>
                            <th>@item.ContractForm</th>
                            @*<th><img src="~/uploads/@item.ContractForm" class="rounded-circle" height="40" width="40" asp-append-version="true" /></th>*@
                            <th></th>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" id="confirm-text" >
                                            <i class="bx bxs-trash-alt icon-padding delet-color" aria-hidden="true" href="javascript:void(0);"></i>
                                            حذف
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">
                                            <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                            تفاصيل
                                        </a>






                                    </div>
                                </div>
                            </td>
                        </tr>
                                }
                        </tbody>
                    </table>
            </div>


        
        </div>
    </div>
</div>

