


@model IEnumerable<ContractFarming.Models.Advertisment>

@{
    ViewData["Title"] = "الإعلانات";
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">

         
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class=" justify-content-end   d-grid gap-2 ">
                            <a asp-action="Add">
                                <button class="dt-button add-new btn btn-primary">
                                    <span>
                                        <i class="bx bx-plus me-0 me-lg-2"></i>
                                        <span class="d-none d-lg-inline-block"> إضافةإعلان </span>
                                    </span>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>

            </div>



            <div class="table-responsive text-nowrap ">
                @if (!Model.Any())
                {
                    <div class="alert alert-warning" role="alert">
                        لا توجد اي إعلانات بعد
                    </div>
                }
                else
                {
                    <table class="table TProject">
                        <thead>
                            <tr>
                                <th>الرقم</th>


                                <th>
                                    النص
                                </th>
                                <th>تاريخ البدء</th>
                                <th>تاريخ الإنتهاء</th>
                                <th>صورة الإعلان</th>

                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <th>@item.Text</th>

                                        <td> @item.StartDate</td>
                                        <th>@item.ExpirationDate</th>

                                        <th><img src="~/uploads/@item.UrlImage" class="rounded-circle" height="40" width="40" asp-append-version="true" />      </th>

                                        <td>


                                           
                                            <div class="dropdown">
                                                    <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                            aria-expanded="false">
                                                        <i class="bx bx-dots-vertical-rounded"></i>
                                                    </button>
                                                    <div class="dropdown-menu">

                                                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">
                                                            <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                            تفاصيل
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" onclick="return confirm('هل تريد حذف هذا الحقل؟')">
                                                            <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                            حذف
                                                        </a>



                                                    </div>
                                                </div>
                                        </td>
                                    </tr>



                                }

                        </tbody>
                    </table>
                }


            </div>


