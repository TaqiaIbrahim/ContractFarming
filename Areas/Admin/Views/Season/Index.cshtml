@model IEnumerable<ContractFarming.Models.Season>


@{
    ViewData["Title"] = " المواسم";
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">

                <div class="col-md-12">

                    <div class=" justify-content-end   d-grid gap-2 ">
                        <a asp-action="AddOrEdit">
                            <button class="dt-button add-new btn btn-primary mt-3 ml-1">
                                <span>
                                    <i class="bx bx-plus me-0 me-lg-2"></i>
                                    <span class="d-none d-lg-inline-block"> إضافة موسم </span>
                                </span>
                            </button>
                        </a>
                    </div>
                </div>


            </div>
            <div class="table-responsive text-nowrap">
                @if (!Model.Any())
                {
                    <div class="alert alert-warning" role="alert">
                        لا توجد اي مواسم بعد
                    </div>
                }
                else
                {

                    <table class="table TProject">
                        <thead>
                            <tr>

                                <th>رقم الموسم</th>
                                <th>
                                    اسم الموسم
                                </th>
                                <th>تاريخ البدء</th>
                                <th>تاريخ الإنتهاء</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                         
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Id</th>
                                        <th>@item.SeasonName</th>
                                        <th> @item.Start_date</th>
                                        <th>@item.End_date</th>


                                        <th>
                                            <div class="dropdown">
                                                <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">

                                                    <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="dropdown-item">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        تعديل
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" onclick="return confirm('هل تريد حذف هذا الحقل؟')">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        حذف
                                                    </a>





                                                </div>
                                            </div>
                                        </th>


                                    </tr>
                                }



                        </tbody>
                    </table>
                }
                </div>


         
        </div>
    </div>
</div>





