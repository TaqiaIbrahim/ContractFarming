                                   onchange="document.getElementById('CommercialRecordPhoto').src=window.URL.createObjectURL(this.files[0])" />


                            <span asp-validation-for="Input.CommercialRecordPhoto " class="text-danger"></span>
                        </div>



                        <button type=submit class="btn btn-primary d-grid w-100">إنشاء حساب</button>
                </form>

