@model IEnumerable<ContractFarming.Models.Advertisment>
<body>

    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item  active">
                    <img class="w-100" src="/Home/assets/img/carousel-1.jpg" alt="Image" />
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-12 col-lg-10">
                                    <h5 class="text-light display-2   mb-3 animated slideInDown">
                                        مرحبا
                                    </h5>
                                    <h1 class=" text-uppercase text-light mb-3 animated slideInDown mb-5">
                                        الوزارة اليمنية للزراعة والتنمية الوطنية لأنتاج المحاصيل الزراعية
                                    </h1>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="carousel-item ">
                        <img class="w-100" src="/uploads/@item.UrlImage" alt="Image" />
                        <div class="carousel-caption">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-12 col-lg-10">
                                        <h5 class="text-light display-2   mb-3 animated slideInDown">
                                            مرحبا
                                        </h5>
                                        <h1 class=" text-uppercase text-light mb-3 animated slideInDown mb-5">
                                            @{ string text = item.Text;
                                                if (text.Length > 25)
                                                {
                                                    text = text.Substring(0, 70);
                                                }@text


                                            }
                                        </h1>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="carousel-item ">
                    <img class="w-100" src="/Home/assets/img/carousel-1.jpg" alt="Image" />
