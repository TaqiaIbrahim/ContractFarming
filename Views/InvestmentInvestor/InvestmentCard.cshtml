</div>
<!-- Topbar End -->
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5 py-lg-0">
    <a asp-controller="InvestmentInvestor" asp-action="InvestmentCardName" class="navbar-brand d-flex align-items-center">
        <h1 class="m-0">
            <i class="fa fa-building text-primary me-3"></i>رجوع
        </h1>
    </a>
    <button type="button"
            class="navbar-toggler"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

</nav>
<!-- Navbar End -->
<!-- Page Header Start -->
<!-- Page Header End -->
<!-- Service Start -->
