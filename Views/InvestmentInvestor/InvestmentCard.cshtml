<!-- Appointment Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            
            
            <div class="col-lg-5 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="border-start border-5 border-primary ps-4 mb-5">
                    <h6 class="text-body text-uppercase mb-2"></h6>
                    
                    <h1 class="display-6 mb-0">
                        اسم البطاقة:@Model.Title

                        <img class="img-fluid" src="/uploads/@Model.Attachment" alt="" /> 
                        <h3 class="display-9 mb-0">
                            رقم البطاقة:@Model.Id
                        </h3>
                    </h1>
                </div>

            </div>
            
            <div class="col-lg-7 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="row g-3">

                    <div class="col-sm-12 ">

                        <label class="form-label" for="basicFullname">المنتٍج:</label>
                       

                        <span>  @Html.DisplayFor(modelItem => Model.Producers.FullName)</span>
                    </div>







                    <div class="col-sm-6">
                        <div class="form-floating">
                            <button class="btn btn-primary w-100 py-3">
                                قراءة ملف
                                <div><a href="~/upload/@Model.Attachment"></a> </div>
                            </button>

                        </div>
                    </div>




                    @*<form asp-area="Investor" asp-controller="InvestorRequest" asp-action="AddInvestmentRequest" method="post">*@
                    <form asp-controller="InvestmentInvestor" asp-action="AddAddOrEdit" method="post">
                        <input type="hidden" name="producerId" value="@Model.Producers.Id" />
                        <input type="hidden" name="productId" value="@Model.Product.Id" />

                        <input type="hidden" name="investmentCN" value="@Model.Title" />

                        <div class="col-md-6">
                            <div class="form-floating">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <button class="btn btn-primary w-100 py-3" type="submit">
                                        طلب استثمار
                                    </button>
                                }
                                else
                                {

                                    <button class="btn btn-primary w-100 py-3"   asp-action="_LoginPartial" id=signin>
                                        طلب استثمار
                                    </button>
                                    @*@if (ViewBag.Message != null)
                                    {
                                        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
                                        </script>}*@

                                    }

                                </div>
                        </div>
                    </form>


                    








                </div>
                
            </div>
        </div>
    </div>
</div>
<!-- Appointment End -->
