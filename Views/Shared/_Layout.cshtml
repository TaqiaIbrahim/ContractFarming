<body>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top px-4 px-lg-5 py-lg-0 ">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">
                <i class="fa fa-building text-primary me-3"></i>الزراعة التعاقدية
            </h1>
        </a>
        <button type="button"
                class="navbar-toggler"
                data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-3 py-lg-0">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">الصفحة الرئيسية</a>

                <div class="nav-item dropdown">
                    <a asp-area="" asp-controller="Investment" asp-action="Index" class="nav-item nav-link">الاستثمارات</a>


                </div>
                <div class="nav-item dropdown">
                    <a asp-controller="SeedInstruction" asp-action="Index" class="nav-item nav-link">ارشادات البذور</a>
                </div>
                @*<div class="nav-item dropdown">
                        <a asp-area="" asp-controller="ContractualProceduresManual" asp-action="Index" class="nav-item nav-link">دليل الإجراءات التعاقدية</a>

                    </div>*@
                @if (User.IsInRole("مسؤول الموقع"))
                {
                    <div class="nav-item dropdown">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-item nav-link">مسؤول الموقع</a>

                    </div>
                }
                @if (User.IsInRole("منتج"))
                {
                    <div class="nav-item dropdown">
                        <a asp-area="Producer" asp-controller="Home" asp-action="Index" class="nav-item nav-link">منتج</a>

                    </div>
                }
                @if (User.IsInRole("مستثمر"))
                {
                    <div class="nav-item dropdown">
                        <a asp-area="Investor" asp-controller="Home" asp-action="Index" class="nav-item nav-link">مستثمر</a>

                    </div>
                }
                @if (User.IsInRole("مندوب"))
                {
                    <div class="nav-item dropdown">
                        <a asp-area="Representative" asp-controller="Home" asp-action="Index" class="nav-item nav-link">مندوب</a>

                    </div>
                }

                <partial name="_LoginPartial" class="btn btn-primary" />

            </div>
        </div>

    </nav>
    <!-- Navbar End -->






    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted  mt-lg-5  ">
        <div class="container-fluid bg-dark footer mt-5 pt-5 wow fadeIn"
             data-wow-delay="0.1s">
            <div class="row g-5">

                <div class="col-lg-5 col-md-6 ">

                    <a class="btn btn-link text-end" asp-controller="Home" asp-action="Index">الصفحةالرئيسية</a>
                    <a class="btn btn-link text-end" asp-controller="Investment" asp-action="Index">الاستثمارات</a>
                    <a class="btn btn-link text-end" asp-controller="ContractualProceduresManual" asp-action="Index">دليل الإجراءات التعاقدية</a>

                </div>
                <div class="col-lg-3 col-md-6  align-bottom">

                    <div class="d-flex pt-2 ">
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <div class="row mt-3">
                        <div class="copyright">
                            جميع الحقوق محفوظة للزراعة التعاقدية
                        </div>

                    </div>



                </div>
            </div>



    </footer>

    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="fa fa-chevron-up w-100"></i>

    </a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Home/assets/lib/wow/wow.min.js"></script>
    <script src="/Home/assets/lib/easing/easing.min.js"></script>
    <script src="/Home/assets/lib/waypoints/waypoints.min.js"></script>
    <script src="/Home/assets/lib/owlcarousel/owl.carousel.min.js"></script>

    @*<script src="~/Dashboard/ASSETS/JS/extended-ui-sweetalert2.js"></script>*@

    <!-- Template Javascript -->
    <script src="/Home/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

